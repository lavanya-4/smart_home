# API Settings
APP_NAME="Smart Home Management API"
APP_VERSION="1.0.0"
API_PREFIX="/api/v1"

# Server Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Security Settings (CHANGE THIS IN PRODUCTION!)
SECRET_KEY="your-secret-key-here-change-in-production-use-openssl-rand-hex-32"
